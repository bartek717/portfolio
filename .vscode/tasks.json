{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "verify",
            "type": "shell",
            "command": "mvn -B verify",
            "group": "build"
        },
        {
            "label": "test",
            "type": "shell",
            "command": "mvn -B test",
            "group": "test"
        },
        {
            "label": "Push with Empty Commit",
            "type": "shell",
            "command": "git add . && git commit -m \"stash\" && git push"
        }
    ]
}
